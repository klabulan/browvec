{
  "name": "localretrieve",
  "version": "0.1.0",
  "description": "Browser-based hybrid search using SQLite WASM with sqlite-vec extension",
  "main": "dist/localretrieve.mjs",
  "types": "dist/localretrieve.d.ts",
  "scripts": {
    "build:wasm": "bash scripts/build-wasm.sh",
    "build:sdk": "vite build && mkdir -p public/database && cp dist/database/worker.js public/database/worker.js",
    "build": "npm run build:wasm && npm run build:sdk",
    "dev": "bash scripts/dev-server.sh",
    "dev:vite": "vite --host",
    "test": "vitest",
    "test:env": "vitest run tests/environment",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm run test && npm run test:e2e",
    "preview": "vite preview --host --https",
    "serve": "npm run dev",
    "postinstall": "node scripts/verify-install.js",
    "verify": "node scripts/verify-install.js",
    "bundle": "node scripts/create-bundle.js",
    "prebundle": "npm run build"
  },
  "dependencies": {
    "@xenova/transformers": "^2.17.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@types/node": "^24.5.2",
    "@vitest/coverage-v8": "^1.0.0",
    "fs-extra": "^11.3.2",
    "happy-dom": "^12.0.0",
    "playwright": "^1.40.0",
    "typescript": "^5.9.2",
    "vite": "^5.4.20",
    "vitest": "^1.0.0"
  },
  "files": [
    "dist",
    "src/utils/vite-plugin.ts",
    "scripts/dev-server.sh",
    "scripts/verify-install.js"
  ],
  "keywords": [
    "sqlite",
    "wasm",
    "vector-search",
    "hybrid-search",
    "opfs",
    "browser"
  ],
  "author": "LocalRetrieve Team",
  "license": "MIT"
}
